<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @book.user %>
      <h2 class="mt-3">New book</h2>

      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>



                  <!--いいね機能-->
        <td>
          <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book = Book.find(params[:id])), method: :delete do %>
                ♥<%= @book.favorites.count %> いいね
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♡<%= @book.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        </td>

                  <!--コメント機能-->
            <td>コメント件数：<%= @book.book_comments.count %></td>
                  <!--バリデーションエラー表示-->
          <%= render 'layouts/errors', obj: @book_comment %>

          <!--もし、本の投稿をしたユーザーと現在ログインしているユーザーが一致していたら-->
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <% @book.book_comments.each do |book_comment| %>
        <p><%= image_tag book_comment.user.get_profile_image %></p>
        <%= book_comment.user.name %>
        <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,class: "btn btn-sm btn-danger" %>
        <% end %>
      <% end %>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, size:'80x5'  %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>